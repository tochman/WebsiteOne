  <div class="col-lg-4">
  <div class="project-thumbnail" style="position: relative; min-height: 350px; max-height: 350px;">
    <img src="<%= project.image_url.present? ? project.image_url : 'http://placehold.it/320x125/EEE' %>" class="img-responsive">

    <div class="caption">
      <h3 class=""><%= link_to project.title, project_path(project) %></h3>

      <div style="font-size: 0.8em">
        <span>Status: <strong style="font-style: normal;"><%= project.status.upcase %></strong></span>
      </div>

      <p><%= project.description.truncate(150, separator: ' ') %></p>

      <div class="stats" style="position: absolute; bottom: 0; left: 0;">
        <ul>
          <% follower_count = project.followers.count %>
          <% if follower_count > 0 %>
            <li data-toggle="tooltip" data-placement="right"
                title="<%= follower_count %> <%= 'member'.pluralize(follower_count) %>">
              <i class="fa fa-users"></i> <%= follower_count %>
            </li>
          <% end %>
          <% documents_count = project.documents.count %>
          <% if documents_count > 0 %>
            <li data-toggle="tooltip" data-placement="top"
                title="<%= documents_count %> related <%= 'document'.pluralize(documents_count) %>">
              <i class="fa fa-file-text-o"></i> <%= documents_count %>
            </li>
          <% end %>

          <% commit_count = project.commit_count %>
          <% unless commit_count.nil? %>
            <li data-toggle="tooltip" data-placement="top"
                title="<%= commit_count %> <%= 'commit'.pluralize(commit_count) %>">
              <i class="fa fa-github-alt"></i> <%= commit_count %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

